<%- include("partials/header"); %>

<div class="container mt-5 pt-5">
  <h2 class="text-center">Berita Terbaru Desa Mekarjaya</h2>
  <hr>
  <hr><br><br>

  <!-- Form pencarian -->
  <form class="d-flex" role="search" method="GET" action="/berita-terbaru">
    <input 
      class="form-control me-2" 
      type="search" 
      placeholder="Search" 
      aria-label="Search" 
      name="q" 
      value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
    >
    <button class="btn btn-outline-success" type="submit">Search</button>
  </form>
  <br><br>

  <!-- Tampilkan berita yang diambil dari database -->
  <div class="row">
    <% 
    // Urutkan berita berdasarkan tanggal posting dari terbaru ke terlama
    daftarBerita.sort((a, b) => new Date(b.tanggal_posting) - new Date(a.tanggal_posting));
    %>
    <% if (daftarBerita.length > 0) { %>
      <% daftarBerita.forEach(berita => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <!-- gambar -->
            <div class="card-body">
              <h5 class="card-title">
                <%= berita.judul_berita %>
              </h5>
              <p class="text-muted">Ditulis oleh: <%= berita.penulis %> pada <%= berita.tanggal_posting.toLocaleDateString() %></p>
              <a href="/berita/<%= berita.id %>" class="btn btn-primary">Baca Selengkapnya</a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-center">Belum ada berita yang dipublikasikan.</p>
    <% } %>
  </div>
</div>

<%- include("partials/footer"); %>